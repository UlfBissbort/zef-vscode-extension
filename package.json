{
  "name": "zef",
  "displayName": "Zef",
  "description": "Executable Markdown â€” run Python, Rust, TypeScript with live preview, mermaid diagrams, and Svelte components",
  "version": "0.1.1",
  "publisher": "UlfBissbort",
  "repository": {
    "type": "git",
    "url": "https://github.com/UlfBissbort/zef-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:zef-markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zef-markdown",
        "aliases": ["Zef Markdown", "zef-markdown"],
        "extensions": [".zef.md"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zef-markdown",
        "scopeName": "text.html.markdown.zef",
        "path": "./syntaxes/zef-markdown.tmLanguage.json"
      },
      {
        "scopeName": "zef.markdown.injection",
        "path": "./syntaxes/zef-markdown-injection.tmLanguage.json",
        "injectTo": ["text.html.markdown", "text.html.markdown.zef"]
      }
    ],
    "commands": [
      {
        "command": "zef.runBlock",
        "title": "Zef: Run Code Block"
      },
      {
        "command": "zef.runBlockAtCursor",
        "title": "Zef: Run Code Block at Cursor"
      },
      {
        "command": "zef.compileSvelte",
        "title": "Zef: Compile Svelte Component"
      },
      {
        "command": "zef.openPreview",
        "title": "Zef: Open View"
      },
      {
        "command": "zef.selectPython",
        "title": "Zef: Select Python Interpreter"
      },
      {
        "command": "zef.settings",
        "title": "Zef: Settings"
      },
      {
        "command": "zef.restartKernel",
        "title": "Zef: Restart Kernel"
      },
      {
        "command": "zef.showKernelOutput",
        "title": "Zef: Show Kernel Output"
      }
    ],
    "keybindings": [
      {
        "command": "zef.runBlockAtCursor",
        "key": "shift+enter",
        "when": "editorLangId == zef-markdown"
      },
      {
        "command": "zef.runBlockAtCursor",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorLangId == zef-markdown"
      },
      {
        "command": "zef.openPreview",
        "key": "cmd+shift+v",
        "when": "editorLangId == zef-markdown"
      }
    ],
    "configuration": {
      "title": "Zef",
      "properties": {
        "zef.defaultPython": {
          "type": "string",
          "default": "",
          "description": "Path to the default Python interpreter for running code blocks"
        },
        "zef.notebookVenv": {
          "type": "string",
          "default": "",
          "description": "Path to virtual environment for notebook execution (takes priority over defaultPython)"
        }
      }
    },
    "configurationDefaults": {
      "[zef-markdown]": {
        "editor.quickSuggestions": {
          "comments": "off",
          "strings": "off",
          "other": "off"
        },
        "editor.experimental.pasteActions.enabled": true,
        "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",
        "cSpell.enabled": false
      },
      "[markdown]": {
        "editor.quickSuggestions": {
          "comments": "off",
          "strings": "off",
          "other": "off"
        }
      },
      "markdown.copyFiles.destination": {
        "**/*.zef.md": "${documentDirname}/"
      },
      "markdownlint.config": {
        "default": false,
        "MD041": false,
        "MD013": false,
        "MD033": false,
        "MD012": false,
        "MD032": false
      },
      "cSpell.enableFiletypes": [
        "!markdown",
        "!zef-markdown"
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "highlight.js": "^11.11.1",
    "marked": "^11.0.0",
    "svelte": "^5.46.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
