{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "<", "close": ">", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["`", "`"],
    ["\"", "\""],
    ["'", "'"],
    ["*", "*"],
    ["_", "_"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#?region\\b.*-->",
      "end": "^\\s*<!--\\s*#?endregion\\b.*-->"
    }
  }
}
